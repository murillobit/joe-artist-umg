<div class="sm:w-1/2 md:w-1/3 lg:w-1/4 px-2">
  <a href="{{ product.url }}" class="product-grid-wrapper block bg-white mb-4 rounded-lg	p-3 pb-6 hover:opacity-75">
    <img loading="lazy" src="{{ product.featured_image.src | image_url: width: 500 }}" alt="{{ product.featured_image.alt | escape }}" width="500" height="500">
    <p class="text-grey-light text-xs uppercase font-semibold">{{ product.vendor }}</p>
    <p class="text-grey-alternate ">{{ product.title }}</p>
    <p class="text-black text-xl font-bold">{{ product.price | money }}</p>
  </a>
</div>