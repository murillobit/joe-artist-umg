<section class="image-featured-image container mx-auto">
  <div class="featured-image max-w-full	h-auto mb-8">
    {% if section.settings.link != blank %}
      <a href="{{ section.settings.link }}" class=" max-w-full	h-auto"> 
    {% endif %}
    {% if section.settings.image %}
      {%- assign image_url = section.settings.image | image_url: width: 1920 -%}
      <img loading="eager" src="{{ image_url }}" class=" max-w-full	h-auto" width="{{ section.settings.image.width }}" height="{{ section.settings.image.height }}">
    {% endif %}
    {% if section.settings.link != blank %}
      </a>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Featured Hero Image",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link"
    }
  ],
  "presets": [
    {
      "name": "Hero Image",
      "category": "Image"
    }
  ]
}
{% endschema %}